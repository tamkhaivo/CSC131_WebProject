generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type UsersAddress {
  city          String
  country       String
  state         String
  streetAddress String
  zipCode       String
}

model Products {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model Transactions {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  amount           Int
  product_id       String
  transaction_date String
  transaction_id   String
  user_id          String
}

model Users {
  id        String         @id @default(auto()) @map("_id") @db.ObjectId
  address   UsersAddress[]
  email     String
  firstname String
  lastname  String
  user_id   String
}
